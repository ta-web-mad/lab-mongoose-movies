<h2>Edit {{name}}</h2>
<hr>
<form method="POST" action="/celebrities/edit/{{id}}">
    <div class="form-group">
        <label for="name">Name</label>
        <input name="name" type="text" class="form-control" id="name" value="{{name}}">
    </div>

    <div class="form-group">
        <label for="occupation">Occupation</label>
        <input name="occupation" type="text" class="form-control" id="occupation" value="{{occupation}}">
    </div>

    <div class="form-group">
        <label for="catchPhrase">Memorable line in a movie</label>
        <input name="catchPhrase" type="text" class="form-control" id="catchPhrase" value="{{catchPhrase}}">
    </div>
    <button type="submit" class="btn btn-dark">Edit</button>
</form>