<div class="container">
    <h2>Celebrities:</h2>
    {{#each celebrities}}
    <div class="celebrity-card">
        <a href="/celebrities/{{id}}">{{name}}</a>

        <form action="/celebrities/{{id}}/delete" method="POST">
            <button type="submit" class="mini-btn">delete</button>
        </form>
    </div>
    {{/each}}
</div>